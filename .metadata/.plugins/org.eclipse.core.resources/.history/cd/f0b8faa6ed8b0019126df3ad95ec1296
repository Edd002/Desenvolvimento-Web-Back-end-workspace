import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletConfig;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class DataServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

    public DataServlet() {
        super();
    }

    public void init(ServletConfig config) throws ServletException {
    	super.init(config);
	}

    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
    	request.setAttribute("mensagem", "Redirecionado pelo GET do DataServlet");
    	RequestDispatcher resquestDispatcher = request.getRequestDispatcher("WEB-INF/data.jsp");
    	resquestDispatcher.forward(request, response);
	}

    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
    	int dia = 0;
    	int mes = 0;
    	int ano = 0;

    	try {
    		dia = Integer.parseInt(request.getParameter("dia"));
    		mes = Integer.parseInt(request.getParameter("mes"));
    		ano = Integer.parseInt(request.getParameter("ano"));
    	} catch (NumberFormatException numberFormatException) {
    		request.setAttribute("mensagem", "Erro ao informar dia, mês ou ano. Informe apenas números inteiros.");
    	} catch (Exception exception) {
    		request.setAttribute("mensagem", "Erro ao informar dados.");
    	}

    	System.out.println(dia);
    	
    	request.setAttribute("mensagem", "Redirecionado pelo POST do DataServlet");
    	RequestDispatcher resquestDispatcher = request.getRequestDispatcher("WEB-INF/data.jsp");
    	resquestDispatcher.forward(request, response);
	}
}