import java.io.IOException;
import javax.servlet.Filter;
import javax.servlet.FilterChain;
import javax.servlet.FilterConfig;
import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.ServletRequest;
import javax.servlet.ServletResponse;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class DataFilter implements Filter {

	double limite = 0.5;

	public DataFilter() {
	}

	public void destroy() {
	}

	public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain) throws IOException, ServletException {
		int valorAleatorio = (int) (Math.random() * 30);
		double probabilidadeIntercepta = (double) (Math.random() * 1);

		System.out.println(probabilidadeIntercepta);
		if (probabilidadeIntercepta > limite) {
			((HttpServletRequest) request).setAttribute("mensagem", "A diferença entre as datas é (valor aleatório): " + valorAleatorio + " dia(s).");
			RequestDispatcher resquestDispatcher = request.getRequestDispatcher("WEB-INF/data.jsp");
			resquestDispatcher.forward(request, response);
		}

		//chain.doFilter(request, response);
	}

	public void init(FilterConfig fConfig) throws ServletException {
		try {
			limite = Double.parseDouble(fConfig.getInitParameter("limite"));
		} catch (NumberFormatException numberFormatException) {
			// limite = 0.5;
		} catch (Exception exception) {
			// limite = 0.5;
		}
	}

	public static void sendToDataJSP(HttpServletRequest request,  HttpServletResponse response, String mensagem) throws ServletException, IOException {
		request.setAttribute("mensagem", mensagem);
		RequestDispatcher resquestDispatcher = request.getRequestDispatcher("WEB-INF/data.jsp");
		resquestDispatcher.forward(request, response);
	}
}