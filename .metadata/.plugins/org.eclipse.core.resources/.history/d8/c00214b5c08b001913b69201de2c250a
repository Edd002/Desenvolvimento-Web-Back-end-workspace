    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
	<title>Potência</title>

	<%!
		private double calcularPotencia(double x, int n) {
			if (n == 0)
				return 1.0;
	
			if (n < 0) 
				return 1.0 / calcularPotencia(x, -n);
	
			if (n % 2 == 0) {
				double res = calcularPotencia(x, n / 2);
				return res * res;
			}
	
			return x * calcularPotencia(x, n-1);
		}
	%>
</head>
<body>
	<%
		String base = request.getParameter("base");
	%>

	<h1>Potência</h1>
	<form action="potencia.jsp" method="post">
		<label>Base (número real): </label> <input type="text" name="base"><br>
		<label>Expoente (número inteiro): </label> <input type="text" name="expoente"><br>
		<input type="submit" value="Calcular"><br><br>
	</form>
	<label>Resultado: </label> <!-- RESULTADO --> <%= base %> <br>
	<a href="potencia.jsp">Reiniciar</a><br>
	<a href="login.jsp">Sair</a><br><br>
	<!-- MENSAGEM -->
</body>
